@model IEnumerable<House_TARgv20.Models.House.HouseListViewModel>

@{
    int queueNumber = 0;
}

<div>
    <a asp-action="add" asp-controller="house" type="submit" class="btn btn-danger">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">HouseAddress</th>
                <th scope="col">ApartmentNumber</th>
                <th scope="col">FloorNumber</th>
                <th scope="col">NumberOfRooms</th>
                <th scope="col">ConditionOfTheApartment</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model)
            {
                queueNumber++;

                <tr>
                    <td class="">@queueNumber</td>
                    <td class="">@house.HouseAddress</td>
                    <td class="">@house.ApartmentNumber</td>
                    <td class="">@house.FloorNumber</td>
                    <td class="">@house.NumberOfRooms</td>
                    <td class="">@house.ConditionOfTheApartment</td>
                    <td class="">@house.Price</td>
                    <td class="">@house.Description</td>
                    <td>
                        <a asp-action="edit" asp-controller="house" asp-route-id="@house.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="house" asp-route-id="@house.Id" type="submit" class="btn btn-danger" value="Delete">
                    </td>


                </tr>
            }
        </tbody>
    </table>
</form>